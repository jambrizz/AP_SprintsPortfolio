<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Excursions!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Your go to travel itenary planner." FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Lets get started, Select what you want to do below:" FontSize="16" Padding="30,0,30,0"/>
        <!-- Add the buttons feature here to navigate to either creating a travel itineray or load a saved one -->
        <Button Text="New travel itenary" Clicked="NewItenary" CornerRadius="20" Padding="30,10,30,10" />
        <Button Text="Load travel itenary" Clicked="LoadItenary" CornerRadius="20" Padding="30,10,30,10" />
        
    </StackLayout>

</ContentPage>
